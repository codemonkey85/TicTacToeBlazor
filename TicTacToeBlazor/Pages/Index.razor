@page "/"

<MudText>
    Choose the game mode you want to play:
</MudText>

<MudSelect T="GameMode" @bind-Value="@gameMode">
    @foreach (GameMode gameMode in Enum.GetValues(typeof(GameMode)))
    {
        <MudSelectItem Value="@gameMode">
            @gameMode
        </MudSelectItem>
    }
</MudSelect>

@switch (gameMode)
{
    case GameMode.Game3x3:
        <TicTacToeGame3x3 />
        break;
    case GameMode.Game4x4:
        <TicTacToeGame4x4 />
        break;
}

@code {
    private GameMode gameMode = GameMode.Game3x3;

    private enum GameMode
    {
        Game3x3,
        Game4x4,
        Game5x5,
